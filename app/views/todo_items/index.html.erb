<p id="notice"><%= notice %></p>

<h1 class="h1 text-center">Todo Items</h1>

<div class="table-responsive table-bordered">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="h4">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todo_items.each_with_index do |todo_item, index| %>
      <tr>
        <td class="">
          <span class="integer">
          <%= index + 1 %>
        </span>
          <%= todo_item.descripttion %></td>
        <td  class=""><%= link_to 'Edit', edit_todo_item_path(todo_item), class:"btn btn-primary  float-right bt1" %>
        <%= link_to 'Destroy', todo_item, method: :delete, class:"btn btn-danger float-right", data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Todo Item', new_todo_item_path, class: "btn btn-primary link" %>
